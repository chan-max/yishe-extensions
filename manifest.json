{
  "manifest_version": 3,
  "name": "YiShe 多功能工具集",
  "version": "1.0.0",
  "description": "一个模块化的多功能 Chrome 插件，支持不同网站的不同功能",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "YiShe 工具集"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/utils/dom-utils.js",
        "content/utils/site-detector.js",
        "content/components/floating-robot.js",
        "content/content-base.js"
      ],
      "css": [
        "content/styles/robot.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "config/sites.json",
        "content/sites/common.js",
        "content/sites/*/index.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
